{
  "manifest_version": 3,
  "name": "Cloudflare Speed test",
  "description": "A Chrome extension that implements the Cloudflare speed test engine to your toolbar.",
  "version": "0.3.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Speed Test",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://speed.cloudflare.com/*"
  ]
}